<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_f4f4f4"
        android:orientation="vertical">

        <include layout="@layout/include_top"/>

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ly_privacy"
                android:background="?selectableItemBackground"
                android:padding="@dimen/px40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:drawableLeft="@mipmap/xy20"
                    android:drawablePadding="@dimen/px20"
                    android:layout_weight="1"
                    android:text="@string/privacy_protocol"
                    style="@style/Tv15black"/>

                <android.support.v7.widget.AppCompatImageView
                    android:background="@mipmap/jtt40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                style="@style/divider_1"/>

            <LinearLayout
                android:id="@+id/ly_vip"
                android:background="?selectableItemBackground"
                android:padding="@dimen/px40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:drawableLeft="@mipmap/xy20"
                    android:drawablePadding="@dimen/px20"
                    android:layout_weight="1"
                    android:text="@string/member"
                    style="@style/Tv15black"/>

                <android.support.v7.widget.AppCompatImageView
                    android:background="@mipmap/jtt40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                style="@style/divider_1"/>

            <LinearLayout
                android:id="@+id/ly_contact"
                android:background="?selectableItemBackground"
                android:padding="@dimen/px40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:drawableLeft="@mipmap/lxwm60"
                    android:drawablePadding="@dimen/px20"
                    android:layout_weight="1"
                    android:text="@string/contact"
                    style="@style/Tv15black"/>

                <android.support.v7.widget.AppCompatImageView
                    android:background="@mipmap/jtt40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                style="@style/divider_1"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ly_reminder"
                android:background="?selectableItemBackground"
                android:padding="@dimen/px40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:drawableLeft="@mipmap/dztx01"
                    android:drawablePadding="@dimen/px20"
                    android:layout_weight="1"
                    android:text="@string/reminder"
                    style="@style/Tv15black"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_open"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/px20"
                    android:background="@mipmap/qchc01"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.AppCompatImageView
                    android:background="@mipmap/jtt40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                style="@style/divider_1"/>

            <LinearLayout
                android:id="@+id/ly_clear"
                android:background="?selectableItemBackground"
                android:padding="@dimen/px40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:drawableLeft="@mipmap/dztx01"
                    android:drawablePadding="@dimen/px20"
                    android:layout_weight="1"
                    android:text="@string/clear_cache"
                    style="@style/Tv15black"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_clear"
                    android:layout_marginRight="@dimen/px20"
                    android:text="0MB"
                    style="@style/Tv12black"/>

                <android.support.v7.widget.AppCompatImageView
                    android:background="@mipmap/jtt40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                style="@style/divider_1"/>

        </LinearLayout>

        <com.flyco.roundview.RoundTextView
            android:id="@+id/bt_submit"
            style="@style/RoundBlueTextView"
            android:layout_marginLeft="@dimen/px140"
            android:layout_marginTop="@dimen/px50"
            android:layout_marginRight="@dimen/px140"
            android:text="退出登录"
            app:rv_backgroundColor="@color/red_FF7D78"
            app:rv_cornerRadius="@dimen/px40" />

    </LinearLayout>


</layout>
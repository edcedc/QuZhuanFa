<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/px30"
    tools:ignore="MissingConstraints"
    android:background="?selectableItemBackground"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:background="@mipmap/yhk01"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_bank"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/px50"
        android:textColor="@color/white"
        style="@style/Tv15black" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_bank_num"
        android:layout_marginTop="@dimen/px10"
        android:layout_marginLeft="@dimen/px50"
        app:layout_constraintTop_toBottomOf="@id/tv_bank"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        style="@style/Tv15black" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_marginTop="@dimen/px20"
        android:layout_marginLeft="@dimen/px50"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_num"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        style="@style/Tv15black" />

    <FrameLayout
        android:id="@+id/fy_edit"
        android:padding="@dimen/px50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"

            android:background="@mipmap/bfh02"
            android:layout_height="wrap_content" />

    </FrameLayout>



</android.support.constraint.ConstraintLayout>
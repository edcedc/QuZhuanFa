<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="@dimen/px50"
            android:background="@mipmap/bob01"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="220dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginLeft="@dimen/px40"
                android:layout_marginRight="@dimen/px40"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_huan"
                android:layout_gravity="center"
                android:background="@mipmap/gman01"
                android:layout_margin="@dimen/px30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_delete"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:background="@mipmap/gbb01"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_f4f4f4"
        android:orientation="vertical">

        <include layout="@layout/include_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ly_vip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/px40">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/Tv15black"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/xy20"
                    android:drawablePadding="@dimen/px20"
                    android:text="@string/member" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/jtt40" />

            </LinearLayout>

            <View style="@style/divider_1" />

            <LinearLayout
                android:id="@+id/ly_privacy"
                android:background="?selectableItemBackground"
                android:padding="@dimen/px40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:drawableLeft="@mipmap/xy20"
                    android:drawablePadding="@dimen/px20"
                    android:layout_weight="1"
                    android:text="@string/privacy_protocol"
                    style="@style/Tv15black"/>

                <android.support.v7.widget.AppCompatImageView
                    android:background="@mipmap/jtt40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                style="@style/divider_1"/>

            <LinearLayout
                android:id="@+id/ly_action_center"
                android:background="?selectableItemBackground"
                android:padding="@dimen/px40"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:drawableLeft="@mipmap/xy20"
                    android:drawablePadding="@dimen/px20"
                    android:layout_weight="1"
                    android:text="@string/action_center"
                    style="@style/Tv15black"/>

                <android.support.v7.widget.AppCompatImageView
                    android:background="@mipmap/jtt40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                style="@style/divider_1"/>

        </LinearLayout>

    </LinearLayout>

</layout>